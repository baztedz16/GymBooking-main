<!-- dialog_add_video.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video Title"/>
    <EditText
        android:id="@+id/focusArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Focus Area"/>

    <EditText
        android:id="@+id/equipement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Equipment"/>

    <EditText
        android:id="@+id/Preparation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preparation"
        android:inputType="textMultiLine"
        android:lines="3"
        />
    <EditText
        android:id="@+id/Execution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Execution"
        android:inputType="textMultiLine"
        android:lines="2"
        />

    <EditText
        android:id="@+id/editTextLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video Link"/>

    <ImageView
        android:id="@+id/preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTextThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video Thumbnail"/>

</LinearLayout>
